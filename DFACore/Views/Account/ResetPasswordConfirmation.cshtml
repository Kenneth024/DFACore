
@{
    ViewData["Title"] = "Reset Password Confirmation";
}
<p>
    Your password has been reset. Please <a asp-action="Login">click here to log in</a>.
</p>
<style>
    button a {
        color: white;
    }
</style>
<div class="row" style="margin-top:130px;">
    <div class="col-md-3 col-sm-0">
    </div>
    <div class="col-md-6 col-sm-12">
        <div style="border: 1px solid #b7b7b7;height:auto;">
            <div style="background-color: #217ff3;color: white;height: 35px;">
                <p class="text-left " style="padding: 8px;font-weight:600;font-size:16px;">@ViewData["Title"]</p>
            </div>
            <div style="padding:30px;">
                <p class="text-center">
                    Your password has been reset.
                </p>
                <button type="submit" class="btn btn-primary col-md-6 col-sm-6 font-weight-bold" style="background-color:#217ff3;position: relative;left: 120px;">@Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</button>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-0">
    </div>
</div>