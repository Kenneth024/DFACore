
@model DFACore.Models.RegisterViewModel;
@using Microsoft.Extensions.Options
@inject IOptions<DFACore.Models.ReCAPTCHASetting>  GoogleRecaptcha

@{
    ViewData["Title"] = "Register";
}
<style>
    #registrationForm label, #registrationForm input {
        font-size: 14px;
        font-weight: 500;
        color: #9a9a9a;
    }

    #reg-info input {
        text-transform: uppercase;
    }

    #reg-account input {
        text-transform: none !important;
    }

    .form-group {
        padding-left: 30px;
        padding-right: 30px;
    }
</style>
<div class="row pageContainers">
    <div class="col-lg-3 col-md-1 col-sm-1"></div>
    <div class="col-lg-6 col-md-10 col-sm-10">
        <form id="registrationForm" method="post" style="border: 1px solid #b7b7b7; height: auto; ">
            <div style="background-color: #217ff3;color: white;height: 35px;">
                <p class="text-left " style="padding: 8px;font-weight:600;font-size:16px;">Account Registration</p>
            </div>
            <div asp-validation-summary="All" class="text-danger" style="margin-top:20px;"></div>
            <div style="padding:10px;">
                <div id="reg-info">
                    <div class="form-group">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MiddleName"></label>
                        <input asp-for="MiddleName" class="form-control" />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Suffix"></label>
                        @*<input asp-for="Suffix" class="form-control" />*@
                        <select asp-for="Suffix" class="form-control">
                            <option value=""></option>
                            <option value="JR.">JR.</option>
                            <option value="SR.">SR.</option>
                            <option value="I">I</option>
                            <option value="II">II</option>
                            <option value="III">III</option>
                            <option value="IV">IV</option>
                            <option value="V">V</option>
                        </select>
                        <span asp-validation-for="Suffix" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6 col-sm-3">
                                <label asp-for="Gender"></label>
                                <br />
                                @Html.RadioButtonFor(m => m.Gender, "Male") @Html.Label("Male")
                                @Html.RadioButtonFor(m => m.Gender, "Female") @Html.Label("Female")
                                <span asp-validation-for="Gender" class="text-danger"></span>
                                @*<div class="d-none d-md-block" style="padding:5px;">
                                        @Html.RadioButtonFor(m => m.Gender, "Male") @Html.Label("Male")
                                        @Html.RadioButtonFor(m => m.Gender, "Female") @Html.Label("Female")
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </div>
                                    <div class="d-sm-none" >
                                        @Html.RadioButtonFor(m => m.Gender, "Male") @Html.Label("Male")
                                        @Html.RadioButtonFor(m => m.Gender, "Female") @Html.Label("Female")
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </div>*@
                            </div>
                            <div class="col-md-6 col-sm-10">
                                <label asp-for="DateOfBirth"></label>
                                <input type="date" asp-for="DateOfBirth" class="form-control" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="reg-account">
                    <div class="form-group ">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" id="reg-password" />
                        <span toggle="#password-field" class="fa fa-fw fa-eye field_icon toggle-password float-right" style="position: relative;top: -24px;right: 10px;"></span>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control" id="reg-confirmpassword" />
                        <span toggle="#password-field" class="fa fa-fw fa-eye field_icon toggle-confirmpassword float-right" style="position: relative;top: -24px;right: 10px;"></span>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <input id="Token" asp-for="Token" type="hidden" />

                <div class="form-group">
                    <div class="col-md-12 col-sm-12" style="text-align: center;">
                        <input asp-for="IsTermsAndConditionChecked" />
                        <label class="form-check-label" for="terms_and_condition">
                            I accept the <a href="#" data-toggle="modal" data-target="#exampleModal">Terms and Conditions</a>
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5 col-sm-5"><button type="button" class="btn btn-secondary col-12" style="background-color:white; margin-bottom:10px;">@Html.ActionLink("Back", "Login", "Account")</button></div>
                    <div class="col-md-2 col-sm-2">
                    </div>
                    <div class="col-md-5 col-sm-5"><button type="submit" class="btn btn-primary col-12">Register</button></div>
                </div>
            </div>


        </form>
    </div>
    <div class="col-lg-3 col-md-1 col-sm-1"></div>
</div>
<div class="row">


    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Terms and Conditions</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Terms and conditions here...
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="TermsAndConditionsAction(true)" class="btn btn-primary float-left" data-dismiss="modal" style="background-color:#217ff3;color:white;width: 160px;margin-right: 85px;">Agree</button>
                    <button type="button" onclick="TermsAndConditionsAction(false)" class="btn btn-secondary float-right" data-dismiss="modal" style="background-color:white;color:#217ff3;width: 160px;margin-right: 26px;border: 1px solid #ababab;">Decline</button>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://www.google.com/recaptcha/api.js?render=@GoogleRecaptcha.Value.ReCAPTCHA_Site_Key"></script>
    <script>
        grecaptcha.ready(function () {
            grecaptcha.execute('@GoogleRecaptcha.Value.ReCAPTCHA_Site_Key', { action: 'homepage' }).then(function (token) {
                console.log(token);
                $('#Token').val(token);
            });
        });
        $(document).on('click', '.toggle-password', function() {

            $(this).toggleClass("fa-eye fa-eye-slash");

            var input = $("#reg-password");
            input.attr('type') === 'password' ? input.attr('type', 'text') : input.attr('type', 'password');
            console.log(input.attr('type'));
        });
        $(document).on('click', '.toggle-confirmpassword', function () {

            $(this).toggleClass("fa-eye fa-eye-slash");

            var input = $("#reg-confirmpassword");
            input.attr('type') === 'password' ? input.attr('type', 'text') : input.attr('type', 'password');
            console.log(input.attr('type'));
        });
         $('#reg-confirmpassword').on("cut copy paste",function(e) {
                e.preventDefault();
         });
        function TermsAndConditionsAction(result) {
            console.log(result);
            //$('#IsTermsAndConditionChecked').ch
            $("#IsTermsAndConditionChecked").prop("checked", result);
            $("#IsTermsAndConditionChecked").val(result);
            console.log($("#IsTermsAndConditionChecked").val());
        };
 
    </script>
}