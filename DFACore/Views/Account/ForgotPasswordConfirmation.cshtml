
@{
    ViewData["Title"] = "ForgotPasswordConfirmation";
}
<style>
    button a {
        color: white;
    }
</style>
<div class="row" style="margin-top:130px;">
    <div class="col-md-3 col-sm-0">
    </div>
    <div class="col-md-6 col-sm-12">
        <div style="border: 1px solid #b7b7b7;height:auto;">
            <div style="background-color: #217ff3;color: white;height: 35px;">
                <p class="text-left " style="padding: 8px;font-weight:600;font-size:16px;">Request for password reset submitted</p>
            </div>
            <div style="padding:30px;">
                <p class="text-center">
                    Please check your email to reset your password.
                </p>
                <button type="button" class="btn btn-primary col-md-6 col-sm-6" style="background-color:#217ff3;position: relative;left: 120px;">@Html.ActionLink("Back", "Login", "Account")</button>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-0">
    </div>
</div>