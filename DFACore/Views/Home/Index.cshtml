@using Microsoft.AspNetCore.Identity
@model DFACore.Models.ApplicantRecordViewModel
@{
    ViewData["Title"] = "Home Page";
}
<style>
    .nav-item a {
        height: 30px;
        line-height: 15px;
        border: 1px solid #b7b7b7;
        color: gray;
    }

    .nav-item .active {
        color: white;
    }

    div#application-form {
        color: gray;
    }

    /*button {
        width: 200px;
    }*/
    #documentList h6 {
        font-weight: 600;
    }

    #appointmentTime div {
        margin-left: 10px;
    }
</style>

<div id="application-form" style=" border: 1px solid #b7b7b7;
        padding: 20px;
        height: auto">
    <p style="margin-bottom: 2rem;">
        <span class="float-left font-weight-bold">
            @User.Identity.Name
        </span>
        <span class="float-right">
            @DateTime.Now.ToString("MMMM dd yyy HH:mm tt")
        </span>
    </p>
    @*<a asp-action="LogOff" asp-controller="Account">Logout</a>*@
    <ul class="col-12 nav nav-pills nav-fill" style="margin-bottom: 1rem;">
        <li class="nav-item">
            <a id="stepOneBtn" class="nav-link" onclick="Navigate('step-one',this)" href="#step-one"><span class="font-weight-bold">STEP 1:</span><span> Apostille Application</span></a>
        </li>
        <li class="nav-item">
            <a id="stepTwoBtn" class="nav-link" onclick="Navigate('step-two',this)" href="#step-two"><span class="font-weight-bold">STEP 2:</span><span> Schedule an Appointment</span></a>
        </li>
        <li class="nav-item">
            <a id="stepThreeBtn" class="nav-link" onclick="Navigate('step-three',this)" href="#step-three"><span class="font-weight-bold">STEP 3:</span><span> Generate Appointment Letter</span></a>
        </li>
    </ul>
    <form method="post">
        <div id="step-one" class="tabcontent">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="form-group">
                    <h6>Name of the Document Owner</h6>
                    <div class="row">
                        <div class="col-md-2 col-sm-12">
                            <label asp-for="Title"></label>
                            <select asp-for="Title" class="form-control">
                                <option value=""></option>
                                <option value="Title 1">Title 1</option>
                                <option value="Title 2">Title 2</option>
                                <option value="Title 3">Title 3</option>
                            </select>
                        </div>
                        <div class="col-md-3 col-sm-12">
                            <label asp-for="FirstName"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="col-md-3 col-sm-12">
                            <label asp-for="MiddleName"></label>
                            <input asp-for="MiddleName" class="form-control" />
                            <span asp-validation-for="MiddleName" class="text-danger"></span>
                        </div>

                        <div class="col-md-3 col-sm-12">
                            <label asp-for="LastName"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="col-md-1 col-sm-12">
                            <label asp-for="Suffix"></label>
                            <input asp-for="Suffix" class="form-control" />
                            <span asp-validation-for="Suffix" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-9 col-sm-12">
                            <label asp-for="Address"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 col-sm-12">
                            <label asp-for="ContactNumber"></label>
                            <input asp-for="ContactNumber" class="form-control" />
                            <span asp-validation-for="ContactNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-8 col-sm-12">
                            <label asp-for="CompanyName"></label>
                            <input asp-for="CompanyName" class="form-control" />
                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <label asp-for="CountryDestination"></label>
                            @* Change to drop down list of countries *@
                            <input asp-for="CountryDestination" class="form-control" />
                            <span asp-validation-for="CountryDestination" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-7 col-sm-12">
                            <label asp-for="NameOfRepresentative"></label>
                            <input asp-for="NameOfRepresentative" class="form-control" />
                            <span asp-validation-for="NameOfRepresentative" class="text-danger"></span>
                        </div>
                        <div class="col-md-5 col-sm-12">
                            <label asp-for="RepresentativeContactNumber"></label>
                            <input asp-for="RepresentativeContactNumber" class="form-control" />
                            <span asp-validation-for="RepresentativeContactNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="col-12">
                    <label class="form-check-label">
                        <a href="#" class="font-weight-bold" data-toggle="modal" data-target="#apostileModal">
                            Click here to select the document/s to be Apostillized
                        </a>
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-12">
                    <h6>Authentication requirements may be subject to change. The Department may require additional supporting documents if necessary.</h6>
                    <div style="background-color: #217ff3;color: white;height: 35px;">
                        <p class="text-left " style="padding: 8px;font-size:14px;">Number of documents to be Apostillized: <span>(Count)</span></p>
                    </div>
                    <div id="documentList" style="border: 1px solid #b7b7b7; padding: 10px;height:150px; overflow:scroll;">
                        <div class="row">
                            <div class="col-md-1 col-sm-12">
                                <h6>1 doc/s</h6>
                            </div>
                            <div class="col-md-11 col-sm-12">
                                <h6>Sample DOcument</h6>
                            </div>
                            <div class="col-md-1 col-sm-12">
                                <h6>1 doc/s</h6>
                            </div>
                            <div class="col-md-11 col-sm-12">
                                <h6>Sample DOcument</h6>
                            </div>
                            <div class="col-md-1 col-sm-12">
                                <h6>1 doc/s</h6>
                            </div>
                            <div class="col-md-11 col-sm-12">
                                <h6>Sample DOcument</h6>
                            </div>
                            <div class="col-md-1 col-sm-12">
                                <h6>1 doc/s</h6>
                            </div>
                            <div class="col-md-11 col-sm-12">
                                <h6>Sample DOcument</h6>
                            </div>
                            <div class="col-md-1 col-sm-12">
                                <h6>1 doc/s</h6>
                            </div>
                            <div class="col-md-11 col-sm-12">
                                <h6>Sample DOcument</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div style="margin-left: 25%;margin-right: 25%;">
                <button type="submit" id="nextBtn" class="btn col-md-4 col-sm-12" style="background-color:#217ff3;color:white;">Next</button>
                <button type="submit" class="btn btn-secondary float-right col-md-4 col-sm-12" style="background: white;color: blue;border: 1px solid darkgray;">Back</button>
            </div>
        </div>
        <div id="step-two" style="display:none" class="tabcontent">
            <div class="row col-12">
                <label>Processing Site:</label>
                <input class="form-control" value="DFA - Office of the Consular Affairs" />
            </div>
            <div class="row col-12">
                <label>Address</label>
                <input class="form-control" value="Bradco Avenue, cor. Macapagal Blvd. ASEANA Business Park, Paranaque City" />
            </div>            <hr />
            <div class="row col-12" style="margin-top:10px;">
                <div class="col-md-6 col-sm-12">
                    <label>Select Date</label>
                    @*<input class="form-control" type="date" />*@
                    @*<div id="datetimepicker"></div>*@
                    @Html.Partial("_CalendarPartial")
                </div>
                <div class="col-md-2 col-sm-12">
                    <label>Select Time</label>
                    <div id="appointmentTime" style="border:1px solid #b7b7b7;height:auto;margin-left:10px;">
                        @*@Html.RadioButtonFor(m => m.Gender, "Male") @Html.Label("Male")*@
                        <div class="col-12">
                            <input type="radio" name="option1" />
