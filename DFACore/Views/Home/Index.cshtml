                    <span>: MNL-321312312</span>
                </div>
                <div class="col-md-4 col-sm-12">
                    <span>Processing Site</span>
                </div>
                <div class="col-md-8 col-sm-12">
                    <span>: DFA site and address</span>
                </div>
                <p style="margin-top:10px" class="font-weight-bold">An Appointment Letter will be sent to your email. Please print and present confirmed Appointment Letter when you visit the DFA - Office of the Consular Affairs for the processing of your Apostille.</p>
            </div>
            <div style="margin-left: 25%;margin-right: 25%;">
                <button type="submit" class="btn btn-secondary float-right col-md-4 col-sm-12" style="background: white;color: blue;border: 1px solid darkgray;">Back</button>
                <button type="submit" id="nextBtn" class="btn col-md-4 col-sm-12" style="background-color:#217ff3;color:white;">Send to Email</button>
            </div>
            <p style="margin-top:10px" class="text-center">Did'nt receive? <a href="#">Send email Again.</a></p>
        </div>

    </form>
</div>
<!-- Modal -->
<div class="modal fade" id="apostileModal" tabindex="-1" role="dialog" aria-labelledby="apostileModallLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Apostile</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Body of modal...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {

            $('#stepOneBtn').click();

        });

        //$('#nextBtn').click(function () {
        //    $('#stepTwoBtn').click();
        //});

        function Navigate(step, element) {
            var i, tabcontent, tablinks;
            tabcontent = $('.tabcontent');
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            tablinks = $('.nav-link');
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].style.backgroundColor = "";
                tablinks[i].style.color = "gray";
            }
            element.style.backgroundColor = "#217ff3";
            element.style.color = "white";
            document.getElementById(step).style.display = "block";
            if (step = "step-two") {
                $('#datepicker').click();
            }
        }
    </script>
}
